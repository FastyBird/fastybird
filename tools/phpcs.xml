            </property>
        </properties>
    </rule>

    <!--Exclude folders -->
    <exclude-pattern>/tools</exclude-pattern>
    <exclude-pattern>/tests/tmp</exclude-pattern>
    <exclude-pattern>/tests/stubs/*</exclude-pattern>

