{
  "compilerOptions" : {
    "target" : "esnext",
    "module" : "esnext",
    "strict" : true,
    "declaration" : true,
    "declarationDir" : "dist/dts",
    "emitDeclarationOnly" : true,
    "noUnusedLocals" : true,
    "noUnusedParameters" : true,
    "importHelpers" : true,
    "moduleResolution" : "node",
    "experimentalDecorators" : true,
    "resolveJsonModule": true,
    "esModuleInterop" : true,
    "allowSyntheticDefaultImports" : true,
    "sourceMap" : true,
    "baseUrl" : "public",
    "types" : [
      "@fastybird/metadata-library",
      "@fastybird/ws-exchange-plugin",
      "@fastybird/web-ui-theme",
      "@types/lodash",
      "@types/uuid",
      "node",
      "vue"
    ],
    "paths" : {
      "@/*" : [
        "*"
      ]
    },
    "lib" : [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include" : [
    "./public/**/*.ts"
  ],
  "exclude" : [
    "node_modules",
    "dist"
  ]
}
