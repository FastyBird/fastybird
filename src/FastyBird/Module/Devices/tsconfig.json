{
  "compilerOptions" : {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "public",
    "types" : [
      "@fastybird/metadata-library",
      "@fastybird/web-ui-library",
      "@fastybird/ws-exchange-plugin",
      "@types/lodash",
      "@types/uuid",
      "node",
      "vue",
      "vue-toastification",
      "vite/client"
    ],
    "paths" : {
      "@/*" : [
        "*"
      ]
    },
    "lib" : [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include" : [
    "public/**/*.ts",
    "public/**/*.d.ts",
    "public/**/*.vue"
  ],
  "exclude" : [
    "public/**/*.stories.ts",
    "public/**/stories.ts",
    "public/**/*.spec.ts",
    "node_modules",
    "dist"
  ]
}
