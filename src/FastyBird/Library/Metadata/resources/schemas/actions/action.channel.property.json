{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "action": {
      "type": "string",
      "enum": [
        "get",
        "set"
      ]
    },
    "channel": {
      "type": "string",
      "format": "uuid",
      "description": "Channel unique uuid v4 identifier"
    },
    "property": {
      "type": "string",
      "format": "uuid",
      "description": "Channel property unique uuid v4 identifier"
    }
  },
  "if": {
    "properties": {
      "action": {
        "const": "get"
      }
    }
  },
  "then": {
    "required": [
      "action",
      "channel",
      "property"
    ]
  },
  "else": {
    "if": {
      "properties": {
        "action": {
          "const": "set"
        }
      }
    },
    "then": {
      "properties": {
        "set": {
          "type": "object",
          "properties": {
            "actual_value": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "number"
                },
                {
                  "type": "boolean"
                }
              ],
              "description": "Property actual value to be set into property"
            },
            "expected_value": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "number"
                },
                {
                  "type": "boolean"
                }
              ],
              "description": "Property expected value to be set into property"
            }
          }
        },
        "write": {
          "type": "object",
          "properties": {
            "actual_value": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "number"
                },
                {
                  "type": "boolean"
                }
              ],
              "description": "Property actual value to be written into property"
            },
            "expected_value": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "number"
                },
                {
                  "type": "boolean"
                }
              ],
              "description": "Property expected value to be written into property"
            }
          }
        }
      },
      "oneOf": [
        {
          "required": [
            "action",
            "channel",
            "property",
            "set"
          ]
        },
        {
          "required": [
            "action",
            "channel",
            "property",
            "write"
          ]
        }
      ]
    }
  }
}
